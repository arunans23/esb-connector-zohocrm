<component name="zohocrm-records" type="synapse/template">
    <subComponents>
        <component name="insertRecords">
            <file>insertRecords.xml</file>
            <description>Insert records into the required Zoho CRM module
            </description>
        </component>
        <component name="getRecords">
            <file>getRecords.xml</file>
            <description>Fetch all users data specified in the API request
            </description>
        </component>
        <component name="getRecordsById">
            <file>getRecordsById.xml</file>
            <description>Retrieve individual records by record ID</description>
        </component>
        <component name="updateRecords">
            <file>updateRecords.xml</file>
            <description>Update or modify the records in Zoho CRM</description>
        </component>
        <component name="getSearchRecords">
            <file>getSearchRecords.xml</file>
            <description>Search records by expressions of the selected columns
            </description>
        </component>
        <component name="getRelatedRecords">
            <file>getRelatedRecords.xml</file>
            <description>Fetch related records</description>
        </component>
        <component name="updateRelatedRecords">
            <file>updateRelatedRecords.xml</file>
            <description>Update records related to another record</description>
        </component>

        <component name="searchRecords">
            <file>searchRecords.xml</file>
            <description>Search records by search criteria</description>
        </component>


    </subComponents>
</component>